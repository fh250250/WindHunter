<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:background="@color/white"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">

    <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/weiba_item_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
    <LinearLayout
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/weiba_item_name"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:id="@+id/weiba_item_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:textColor="@color/black"
                android:textSize="12sp"
                android:id="@+id/weiba_item_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/weiba_item_follow"
            android:text="关注"
            bootstrapbutton:bb_roundedCorners="true"
            bootstrapbutton:bb_type="primary"
            bootstrapbutton:bb_size="middle"
            bootstrapbutton:bb_text_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</LinearLayout>